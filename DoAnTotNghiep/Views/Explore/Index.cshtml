    <script src="https://cdn.jsdelivr.net/npm/litepicker/dist/litepicker.js"></script>

    <!--BingMap-->
    <script type='text/javascript' 
        src='https://www.bing.com/api/maps/mapcontrol?callback=GetMap&key=Asf_PRzBpUJVcb9lcAg48BLOuAuaBItg4ZzCqaNQaSIFReqieYA02KBcovVD08Jk' 
        async defer></script>


    <script type="text/javascript">
        var houseResult = @Html.Raw(Json.Serialize(Model.Houses));
        var suggest = null;
        function onLoad() {
            var options = { maxResults: 5 };
            var manager = new Microsoft.Maps.AutosuggestManager(options);
            manager.attachAutosuggest('#explore-input', '#container-explore', selectedSuggestion);
        }
        function onError(message) {
            suggest = null;
        }
        function selectedSuggestion(suggestionResult) {
            suggest = suggestionResult;
        }
        function stringToSlug(str) {
            // remove accents
            var from = "àáãảạăằắẳẵặâầấẩẫậèéẻẽẹêềếểễệđùúủũụưừứửữựòóỏõọôồốổỗộơờớởỡợìíỉĩịäëïîöüûñçýỳỹỵỷ",
                to = "aaaaaaaaaaaaaaaaaeeeeeeeeeeeduuuuuuuuuuuoooooooooooooooooiiiiiaeiiouuncyyyyy";
            for (var i = 0, l = from.length; i < l; i++) {
                str = str.replace(RegExp(from[i], "gi"), to[i]);
            }

            str = str.toLowerCase()
                .trim()
                .replace(/[^a-z0-9\-]/g, '-')
                .replace(/-+/g, '-');

            return str;
        }
        function includeIdCity() {
            for (e in dataLocation) {
                if (stringToSlug(suggest.address.adminDistrict).indexOf(stringToSlug(dataLocation[e].name)) != -1) {
                    return e;
                }
            }
        }
        function showItemMap(){
            for (e in houseResult){
                let itemloc = new Microsoft.Maps.Location(houseResult[e].lat, houseResult[e].lng);
                let pin = new Microsoft.Maps.Pushpin(itemloc, {
                    title: houseResult[e].name,
                    subTitle: houseResult[e].location
                });

                map.entities.push(pin);
            }
        }
    </script>

    <script src="~/js/Bingmap/GetLocation.js" type="text/javascript"></script>
    <script type="text/javascript">
        getDataCity();
        function explore() {
            window.location.href = "@Url.Action("Index", "Explore")?IdCity=" + includeIdCity();
        }
    </script>
    <script type='text/javascript'>
        var map = null;
        function GetMap() {
            Microsoft.Maps.loadModule('Microsoft.Maps.AutoSuggest', {
                callback: onLoad,
                errorCallback: onError
            });

            let loc = new Microsoft.Maps.Location(@Model.Center.Lat, @Model.Center.Lng);
            map = new Microsoft.Maps.Map('#myMap', {
                zoom: 14,
                center: loc
            });
            showItemMap();
        }

        const picker = new Litepicker({
            element: document.getElementById('daterange'),
            singleMode: false,
            tooltipText: {
                one: 'night',
                other: 'nights'
            },
            tooltipNumber: (totalDays) => {
                return totalDays - 1;
            }
        })
    </script>
}