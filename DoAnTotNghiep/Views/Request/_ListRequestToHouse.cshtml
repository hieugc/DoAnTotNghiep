@model List<DoAnTotNghiep.ViewModels.NotifyRequest>
@using DoAnTotNghiep.Enum;
@{
    DateTime now = DateTime.Now;
}

<label display data-bs-target="#requestHouseModalToggle" id="requestHouseModalToggleClick" data-bs-toggle="modal"></label>
<div class="modal fade" id="requestHouseModalToggle" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="requestHouseModalToggleLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <div class="my-modal-title">
                    <h3 class="house-title">Danh sách yêu cầu</h3>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="requesthouseModalToggleClose" onclick="refreshHouseModal()"></button>
            </div>
            <div class="modal-body">
                <div class="list">
                    @foreach(var item in Model)
                    {
                        @Html.Partial("~/Views/Request/_WaitRequest.cshtml", item)
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">$("#requestHouseModalToggleClick").click();</script>
<script src="~/js/Request/updateStatus.js" type="text/javascript"></script>