@model EditRatingViewModel


<div class="modal fade" id="ratingModal" tabindex="-1" aria-labelledby="ratingModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="text-danger fw-semibold branch">Đánh giá trải nghiệm</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="@Url.Action("Update", "Rating")" method="post" id="form-create">
                    <div class="mb-3 item-house">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="label">
                                <i class="fa-solid fa-house"></i>
                                <span>Đánh giá căn hộ</span>
                            </div>
                            <div class="star-select">
                                <i class="fa-solid fa-star" onclick="addStar('item-house', 1)"></i>
                                <div class="star-select">
                                    <i class="fa-solid fa-star" onclick="addStar('item-house', 2)"></i>
                                    <div class="star-select">
                                        <i class="fa-solid fa-star" onclick="addStar('item-house', 3)"></i>
                                        <div class="star-select">
                                            <i class="fa-solid fa-star" onclick="addStar('item-house', 4)"></i>
                                            <div class="star-select">
                                                <i class="fa-solid fa-star" onclick="addStar('item-house', 5)"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3 user">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="label">
                                <i class="fa-solid fa-user"></i>
                                <span>Đánh giá người dùng</span>
                            </div>
                            <div class="star-select">
                                <i class="fa-solid fa-star" onclick="addStar('user', 1)"></i>
                                <div class="star-select">
                                    <i class="fa-solid fa-star" onclick="addStar('user', 2)"></i>
                                    <div class="star-select">
                                        <i class="fa-solid fa-star" onclick="addStar('user', 3)"></i>
                                        <div class="star-select">
                                            <i class="fa-solid fa-star" onclick="addStar('user', 4)"></i>
                                            <div class="star-select">
                                                <i class="fa-solid fa-star" onclick="addStar('user', 5)"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="text-danger" id="user-valid"></div>
                    </div>
                    <div class="mb-3">
                        <label for="contentRating">Cảm nghĩ của bạn về chuyến đi</label>
                        <textarea class="form-control" id="contentRating" name="contentRating" rows="5" onchange="checkRatingValid()">@(Model.Content)</textarea>
                        <div class="text-danger" id="contentRating-valid"></div>
                    </div>
                </form>
                <button type="button" class="btn btn-primary" onclick="editRating()">Đánh giá</button>
            </div>
        </div>
    </div>
</div>
<button class="d-none" type="button" id="ratingModalClick" data-bs-toggle="modal" data-bs-target="#ratingModal"></button>



<script src="~/js/WaitingRating/edit.js" type="text/javascript"></script>
<script type="text/javascript">
    $("#ratingModalClick").click();
    var ratingData = {
        ratingUser: @(Model.RatingUser),
        idRequest: @(Model.IdRequest),
        content: '@Html.Raw(Model.Content)',
        ratingHouse: @Model.RatingHouse,
        id: @Model.Id
    }
</script>
@if(Model.RatingHouse != null){
    <script type="text/javascript">
        addStar("item-house", @Model.RatingHouse.Value)
    </script>
}

<script type="text/javascript">
    addStar("user", @(Model.RatingUser));
</script>