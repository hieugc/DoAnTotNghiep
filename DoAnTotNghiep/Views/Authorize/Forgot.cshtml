@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "_LayoutLogin";
}


<!-- Forgot Password -->
<div class="card">
    <div class="card-body">
        <!-- Logo -->
        <div class="app-brand justify-content-center">
            <a href="@Url.Action("Index", "Home")" class="app-brand-link gap-2">
                <span class="app-brand-logo demo branch">
                    <img src="~/Image/logo.png" alt="logo" />
                </span>
                <span class="app-brand-text demo text-body fw-bolder">VExchangeHome</span>
            </a>
        </div>
        <!-- /Logo -->
        <h4 class="mb-2">Quên mật khẩu? 🔒</h4>
        <p class="mb-4">Điền email của bạn đã đăng ký, chúng tôi sẽ cấp lại mật khẩu cho bạn.</p>
        <form id="formAuthentication" class="mb-3" action="index.html" method="POST">
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="text"
                       class="form-control"
                       id="email"
                       name="email"
                       placeholder="Điền email đã đăng ký"
                       autofocus />
            </div>
            <button class="btn btn-primary d-grid w-100">Gửi xác nhận</button>
        </form>
        <div class="text-center">
            <a href="@Url.Action("SignIn", "Auth")" class="d-flex align-items-center justify-content-center">
                <i class="bx bx-chevron-left scaleX-n1-rtl bx-sm"></i>
                Quay lại đăng nhập
            </a>
        </div>
    </div>
</div>
<!-- /Forgot Password -->