@using DoAnTotNghiep.Entity
@{
    ViewData["Title"] = "Trang chủ";
    var key = "Asf_PRzBpUJVcb9lcAg48BLOuAuaBItg4ZzCqaNQaSIFReqieYA02KBcovVD08Jk";
}

<h>@ViewData["connect"]</h>
<div class="group-banner">
    <div class="w-100">
        <img src="~/Image/banner.png" alt="Banner Website" class="banner" />
    </div>
    <div class="about shadow">
        <div class="card text-primary">
            <img src="~/Image/About_1.png" class="card-img" alt="Number of Home" class="">
            <div class="card-img-overlay">
                <h2 class="card-title">250</h2>
                <p class="card-text">Căn nhà</p>
                <p class="card-text"><i class="fa-solid fa-house"></i></p>
            </div>
        </div>
        <div class="card text-primary">
            <img src="~/Image/About_3.jpg" class="card-img" alt="Number of Location" class="">
            <div class="card-img-overlay">
                <h2 class="card-title">25</h2>
                <p class="card-text">Tỉnh thành</p>
                <p class="card-text"><i class="fa-solid fa-map-location-dot"></i></p>
            </div>
        </div>
        <div class="card text-primary">
            <img src="~/Image/About_2.png" class="card-img" alt="Slogan" class="">
            <div class="card-img-overlay">
                <p class="card-text">Giao dịch</p>
                <p class="card-text">nhanh chóng</p>
                <p class="card-text"><i class="fa-solid fa-clock"></i></p>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <!--Frame 1-->
    <div class="frame_1">
        <div class="container-lg">
            <div class="description">
                <h1>Khám phá những địa điểm của chúng tôi</h1>
                <p><strong>VExchangeHome</strong> cung cấp cho bạn những trải nghiệm mới nhất qua từng nơi trên mọi miền đất nước.</p>
                <div><button class="btn btn-primary btn-lg">Khám phá</button></div>
            </div>
            <div class="list">
                @for(var item = 0; item < 4; item++)
                {
                    <div class="img-container">
                        <img src="~/Image/house-demo.png" alt="Notebook" style="width:100%;">
                        <div class="content">
                            <h2>TP. Hồ Chí Minh</h2>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!--Frame 2-->
    <div class="frame_2">
        <div class="container-lg">
            <h2>Những căn nhà nổi bật</h2>
            <div class="list">
                @for (var item = 0; item < 6; item++)
                {
                    <div class="house-card">
                        <img src="~/Image/house-demo.png" alt="Mike" style="width:100%">
                        <div class="house-img-container">
                            <h2>Nhà của Hiếu</h2>                            
                            <p class="attribute"><i class="fa-solid fa-map-location-dot"></i><span>268 Ly Thuong Kiet Street - Ward 14, District 10, HCMC, Ho Chi Minh City</span></p>
                            <div class="list-attribute">
                                <p class="attribute"><span>4</span><i class="fa-solid fa-star"></i></p>
                                <p class="attribute"><i class="fa-solid fa-users"></i><span>4</span></p>
                                <p class="attribute"><i class="fa-solid fa-bed"></i><span>2</span></p>
                            </div>
                            <p><button class="item-button">
                                <span class="label-show">200point/night</span>
                                <span class="label-hide">Xem chi tiết</span>
                            </button></p>
                        </div>
                    </div>
                }
            </div>
            <div><div class="btn btn-primary btn-lg"><a href="@Url.Action("Index", "Explore")">Xem thêm</a></div></div>
        </div>
    </div>
    <!--Frame 3-->
    <div class="frame_3">
        <div class="container-lg">
            <h2>Cách website hoạt động</h2>
            <div id="carouselExampleIndicators" class="carousel slide carousel-dark" data-bs-ride="false">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 4"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/Image/step_1.svg" class="d-block w-100" alt="Step 1">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Đăng ký miễn phí</h5>
                            <p>Tham gia cộng đồng chúng tôi miễn phí.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/Image/step_2.svg" class="d-block w-100" alt="Step 2">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Tìm kiếm nhà mong muốn</h5>
                            <p>Bạn có thể tìm thấy những căn nhà tuyệt vời tại nơi mình muốn đến.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/Image/step_3.svg" class="d-block w-100" alt="Step 3">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Liên hệ trao đổi</h5>
                            <p>Bạn có thể trao đổi với chủ nhà qua hệ thống tin nhắn.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/Image/step_4.svg" class="d-block w-100" alt="Step 4">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Thanh toán</h5>
                            <p>Bạn có thể dùng căn nhà mình để trao đổi hoặc điểm trên hệ thống.</p>
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src='https://www.bing.com/api/maps/mapcontrol?callback=GetMap&key=@key' type='text/javascript' async defer></script>
    <script src="~/js/Location/updateLocation.js" type="text/javascript"></script>
}