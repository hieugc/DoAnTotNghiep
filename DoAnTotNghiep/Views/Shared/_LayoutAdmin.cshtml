@using DoAnTotNghiep.Enum;
@using Newtonsoft.Json;
@{
    UserInfo? userInfo = ViewData["UserInfoData"] as UserInfo;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />
    <meta name="description"
          content="Đồ án tốt nghiệp 2023">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/DoAnTotNghiep.styles.css" asp-append-version="true" />
    <link rel="shortcut icon" href="~/Image/tiny-logo.png" type="image/x-icon" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap"
          rel="stylesheet" />
    <link rel="stylesheet" href="~/assets/vendor/fonts/boxicons.css" />
    <link rel="stylesheet" href="~/assets/vendor/css/core.css" class="template-customizer-core-css" />
    <link rel="stylesheet" href="~/assets/vendor/css/theme-default.css" class="template-customizer-theme-css" />
    <link rel="stylesheet" href="~/assets/css/demo.css" />
    <link rel="stylesheet" href="~/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css" />
    <script src="~/assets/vendor/js/helpers.js"></script>
    <script src="~/assets/js/config.js"></script>
</head>
<body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <aside class="layout-menu menu-vertical menu bg-menu-theme">
                <div class="app-brand demo">
                    <a href="@Url.Action("Index", "Home")" class="app-brand-link">
                        <span class="app-brand-logo demo">
                            <img src="~/Image/tiny-logo.png" alt="logo"/>
                        </span>
                    </a>
                </div>

                <div class="menu-inner-shadow"></div>

                <ul class="menu-inner py-1">
                    <li class="menu-item mt-4">
                        <a href="@Url.Action("Index", "Admin")" class="menu-link">
                            <i class='bx bxs-dashboard'></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="menu-header small text-uppercase">
                        <span class="menu-header-text">Người dùng</span>
                    </li>
                    <li class="menu-item">
                        <a href="@Url.Action("Users", "Admin")" class="menu-link">
                            <i class='bx bxs-user'></i>
                            <span>Danh sách người dùng</span>
                        </a>
                    </li>
                    @*
                    <li class="menu-header small text-uppercase"><span class="menu-header-text">Hệ thống</span></li>
                    <li class="menu-item">
                        <a href="@Url.Action("Utilities", "Admin")" class="menu-link">
                            <i class='bx bxs-customize'></i>
                            <span>Tiện ích</span>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a href="@Url.Action("Rules", "Admin")" class="menu-link">
                            <i class="tf-icons bx bx-box"></i>
                            <span>Quy tắc</span>
                        </a>
                    </li>
                    *@
                    <li class="w-100 p-3" style="margin-top: auto;">
                        <a href="@Url.Action("Logout", "Authorize")" class="btn btn-danger w-100">
                            <box-icon name='log-out'></box-icon>
                            <span>Đăng xuất</span>
                        </a>
                    </li>
                </ul>
            </aside>
            <div class="layout-page">
                @RenderBody()
            </div>
        </div>
    </div>

    <div id="renderModal"></div>

    <script src="~/assets/vendor/libs/jquery/jquery.js"></script>
    <script src="~/assets/vendor/libs/popper/popper.js"></script>
    <script src="~/assets/vendor/js/bootstrap.js"></script>
    <script src="~/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="~/assets/vendor/js/menu.js"></script>
    <script src="~/assets/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script type="text/javascript">
        let index = @ViewData["index"];
        $(document).ready(function(){
            index = (index == null? 0: index);
            $(".menu-item")[index].classList.add("active");
        });
    </script>
    @(Html.Partial("_ValidationScriptsPartial"))
</body>
</html>
