@model DoAnTotNghiep.ViewModels.UpdatePasswordViewModel


<button data-bs-toggle="modal" data-bs-target="#changePWDModal" id="clickChangePWDModal" style="display: none;"></button>
<div class="modal fade" id="changePWDModal" tabindex="-1" aria-labelledby="changePWDModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Thay đổi mật khẩu</h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="pwdForm" class="mb-3" action="@Url.Action("UpdatePassword", "User")" method="POST">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Mật khẩu mới</label>
                        <input type="password" class="form-control" asp-for="Password" placeholder="Mật khẩu mới" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">Xác nhận mật khẩu</label>
                        <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Xác nhận mật khẩu" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </form>
                <button type="button" class="btn btn-primary" onclick="submitPassword()">Xác nhận</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $("#clickChangePWDModal").click();
</script>