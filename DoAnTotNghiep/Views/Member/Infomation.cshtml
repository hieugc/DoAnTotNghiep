@model DoAnTotNghiep.Entity.AdminReport

@{
    ViewData["Title"] = "Thông tin thành viên";
    Layout = "_LayoutMember";
}


@*
    + Handle gửi form
    + Handle confirm
*@

<div class="infomation">
    <h2 class="infomation-head">Thông tin tài khoản</h2>
    <div class="infomation-details mb-3">
        <div class="infomation-details-frame">
            <div class="infomation-details-frame-title">Thông tin chi tiết</div>
            <div class="infomation-details-frame-avt">
                <div class="avt">
                    <img src="~/Image/logo.png" alt="avt" />
                </div>
                <div>
                    <label for="image-avt" class="btn btn-sm btn-primary">Chỉnh sửa ảnh</label>
                    <input name="image-avt" id="image-avt" hidden type="file" />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="infomation-details-frame mb-3 col-md-6">
                <label for="firstName" class="form-label">Họ & Tên đệm</label>
                <input type="text" class="form-control" name="firstName" id="firstName" placeholder="Nguyễn Văn">
            </div>

            <div class="infomation-details-frame mb-3 col-md-6">
                <label for="lastName" class="form-label">Tên</label>
                <input type="text" class="form-control" name="lastName" id="lastName" placeholder="A">
            </div>

            <div class="infomation-details-frame mb-3 col-md-6">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" name="email" id="email" placeholder="example@gmail.com">
            </div>

            <div class="infomation-details-frame mb-3 col-md-6">
                <label for="phoneNumber" class="form-label">Số điện thoại</label>
                <input type="tel" class="form-control" name="phoneNumber" id="phoneNumber" placeholder="000 0000 000">
            </div>

            <div class="infomation-details-frame mb-3 col-md-6">
                <label for="birthDay" class="form-label">Ngày sinh</label>
                <input type="date" class="form-control" name="birthDay" id="birthDay">
            </div>

            <fieldset class="infomation-details-frame mb-3 col-md-6">
                <label class="">Giới tính</label>
                <div class="d-flex">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gender" id="gender1" value="gender1" checked>
                        <label class="form-check-label" for="gender1">
                            Nam
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gender" id="gender2" value="gender2">
                        <label class="form-check-label" for="gender2">
                            Nữ
                        </label>
                    </div>
                </div>
            </fieldset>

            <div class="col-12 control">
                <button type="button" class="btn btn-primary">Thay đổi thông tin</button>
                <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#changePWDModal">Đổi mật khẩu</button>
            </div>
        </div>

    </div>
</div>