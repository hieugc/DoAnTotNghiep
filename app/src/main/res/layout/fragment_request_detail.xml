<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="request"
            type="com.homex.core.model.response.RequestResponse" />
        <import type="com.example.homex.extension.RequestStatus"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:background="@color/background_gray"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/statusLayout">


                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Regular"
                        android:id="@+id/appCompatTextView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        android:text="@string/request_status"
                        android:textColor="@color/black_60" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvRequestStatus"
                        style="@style/Regular"
                        requestStatus="@{request.request.status}"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:textColor="@color/black_60"
                        app:layout_constraintBottom_toBottomOf="@id/appCompatTextView3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/appCompatTextView3"
                        app:layout_constraintTop_toTopOf="@id/appCompatTextView3" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/requestTxt"
                        requestText="@{request.request.status}"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/primary"
                        app:layout_constraintEnd_toStartOf="@+id/appCompatImageView10"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvRequestStatus" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/appCompatImageView10"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="16dp"
                        android:src="@mipmap/request"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/requestTxt" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Regular"
                    android:id="@+id/appCompatTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/statusLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/you_offered"
                    android:textColor="@color/black_60" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:id="@+id/linearLayout"
                    app:layout_constraintTop_toBottomOf="@id/appCompatTextView"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/ivAvatar"
                            android:src="@mipmap/avatar"
                            android:layout_gravity="center_vertical"
                            loadAvatar="@{request.house.user.urlImage}"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvUserName"
                            style="@style/MediumText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:layout_gravity="center_vertical"
                            android:text="@{request.house.user.fullName}" />
                    </LinearLayout>
                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider" />

                    <LinearLayout
                        android:id="@+id/targetHomeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            loadImage="@{ !request.house.images.empty ? request.house.images.get(0).data : null}"
                            android:src="@mipmap/location" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvTitle"
                                style="@style/HomeTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{request.house.name}"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/MediumText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:drawableStart="@drawable/ic_ppl"
                                android:drawablePadding="8dp"
                                android:gravity="center_vertical"
                                android:text="@{request.house.people + ` người`}" />

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/MediumText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@{request.house.price + ` point/ngày`}"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="end">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/ratingTV"
                                    style="@style/HomeRating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="4dp"
                                    android:layout_gravity="center"
                                    android:text="@{request.house.rating.toString()}"
                                    android:textAlignment="center"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/numberOfRatingTV"
                                    style="@style/HomeRating"
                                    android:textColor="@color/gray6"
                                    android:layout_width="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_height="wrap_content"
                                    android:drawableEnd="@drawable/ic_rating"
                                    android:gravity="center_vertical"
                                    android:drawablePadding="8dp"
                                    android:text="@{`(` + request.house.numberRating + `)`}"
                                    />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/linearLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:id="@+id/appCompatTextView1"
                    android:text="@string/request_for"
                    android:textColor="@color/black_60" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:id="@+id/linearLayout2"
                    app:layout_constraintTop_toBottomOf="@id/offerLayout"
                    android:background="@color/white"
                    android:visibility="visible"
                    setVisibilityGone="@{request.request.type == 1}"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivAvatar2"
                            loadAvatar="@{request.request.user.imageUrl}"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/avatar" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvUserName2"
                            style="@style/MediumText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:textColor="@color/primary"
                            android:text="@string/you" />
                    </LinearLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/MediumText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="12dp"
                        android:gravity="center_vertical"
                        android:text="@string/total" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:padding="12dp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="4dp"
                            android:scaleX="1.4"
                            android:scaleY="1.4"
                            android:src="@drawable/ic_dollar_coin" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/GiantText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{request.request.price.toString()}"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="@string/point"
                            android:textColor="@color/black"
                            android:textSize="22sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:id="@+id/offerLayout"
                    app:layout_constraintTop_toBottomOf="@id/appCompatTextView1"
                    android:background="@color/white"
                    android:visibility="visible"
                    setVisibilityGone="@{request.request.type == 2}"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivAvatar1"
                            loadAvatar="@{request.request.user.imageUrl}"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/avatar" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvUserName1"
                            style="@style/MediumText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:textColor="@color/primary"
                            android:text="@string/you" />
                    </LinearLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider" />

                    <LinearLayout
                        android:id="@+id/myHomeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            loadImage="@{ !request.swapHouse.images.empty ? request.swapHouse.images.get(0).data : null}"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:src="@mipmap/location" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvOfferTitle"
                                style="@style/HomeTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{request.swapHouse.name}"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/MediumText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center_vertical"
                                android:drawableStart="@drawable/ic_ppl"
                                android:drawablePadding="8dp"
                                android:text="@{request.swapHouse.people + ` người`}" />

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/MediumText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@{request.swapHouse.price + ` point/ngày`}"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="end">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/offerRatingTV"
                                    style="@style/HomeRating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="4dp"
                                    android:layout_gravity="center"
                                    android:text="@{request.swapHouse.rating.toString()}"
                                    android:textAlignment="center"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/offerNumberOfRatingTV"
                                    style="@style/HomeRating"
                                    android:textColor="@color/gray6"
                                    android:layout_width="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_height="wrap_content"
                                    android:text="@{`(` + request.swapHouse.numberRating + `)`}"
                                    android:drawablePadding="8dp"
                                    android:gravity="center_vertical"
                                    android:drawableEnd="@drawable/ic_rating"
                                    />


                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    app:layout_constraintTop_toBottomOf="@id/linearLayout2"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:id="@+id/appCompatTextView2"
                    android:text="@string/time"
                    android:textColor="@color/black_60" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="32dp"
                    android:id="@+id/linearLayout3"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/appCompatTextView2"
                    android:background="@drawable/bg_white_corner_radius"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/MediumText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/from_date" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/MediumText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:drawableStart="@drawable/ic_from_date"
                            android:gravity="center"
                            dateFormat="@{request.request.startDate}" />
                    </LinearLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/divider" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/MediumText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/to_date" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/MediumText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:drawableStart="@drawable/ic_to_date"
                            android:gravity="center"
                            dateFormat="@{request.request.endDate}" />
                    </LinearLayout>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/FlexLongButtonSecondary"
                    android:text="@string/contact"
                    android:id="@+id/contactBtn"
                    app:layout_constraintTop_toBottomOf="@id/linearLayout3"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:elevation="5dp"
            >
            <androidx.appcompat.widget.AppCompatButton
                style="@style/FlexLongButtonPrimary"
                requestSent="@{request.request.status}"
                startDate="@{request.request.startDate}"
                endDate="@{request.request.endDate}"
                android:id="@+id/acceptBtn"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="8dp"/>

        </LinearLayout>
    </LinearLayout>

</layout>