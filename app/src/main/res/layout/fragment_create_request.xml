<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.homex.activity.home.request.CreateRequestViewModel" />
        <import type="com.example.homex.extension.NumberExtenstionKt"/>
    </data>

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/appCompatTextView24"
                    style="@style/Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/pick_home"
                    android:textColor="@color/black_60"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/addTargetHomeBtn"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    setVisibilityGone="@{viewModel.house == null}"
                    android:background="@drawable/dotted_border_bg"
                    app:layout_constraintTop_toBottomOf="@+id/appCompatTextView24">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_plus"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <include
                    layout="@layout/search_home_item"
                    app:layout_constraintTop_toBottomOf="@id/addTargetHomeBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="10dp"
                    app:home="@{viewModel.house}"
                    setVisibilityGone="@{viewModel.house != null}"
                    android:visibility="gone"
                    android:id="@+id/targetHome"
                    android:layout_marginTop="16dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/appCompatTextView25"
                    style="@style/Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:text="Phương thức trao đổi"
                    android:textColor="@color/black_60"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/targetHome" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/methodLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/filter_bg"
                    app:layout_constraintTop_toBottomOf="@+id/appCompatTextView25">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/appCompatTextView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="16dp"
                        android:text="Trao đổi bằng nhà"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/homeRB"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:checked="@{viewModel.type == 2}"
                        app:layout_constraintBottom_toTopOf="@+id/materialDivider6"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/materialDivider6"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        app:dividerColor="@color/divider"
                        app:layout_constraintTop_toBottomOf="@id/appCompatTextView7" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/appCompatTextView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:text="Trao đổi bằng điểm"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/materialDivider6" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/pointRB"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:checked="@{viewModel.type == 1}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/materialDivider6" />


                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/appCompatTextView26"
                    style="@style/Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:text="@{viewModel.type == 2 ? `Chọn nhà của bạn dùng để trao đổi` : `Tổng điểm bạn cần phải trả`}"
                    android:textColor="@color/black_60"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/methodLayout" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/yourPointTV"
                    style="@style/Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Bạn hiện có 20000 Point"
                    android:textColor="@color/primary"
                    android:visibility="gone"
                    setVisibilityGone="@{viewModel.type == 1}"
                    app:layout_constraintStart_toStartOf="@id/pointLayout"
                    app:layout_constraintTop_toTopOf="@id/pointLayout" />

                <LinearLayout
                    android:id="@+id/pointLayout"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    android:gravity="center"
                    android:visibility="gone"
                    setVisibilityGone="@{viewModel.type == 1}"
                    app:layout_constraintTop_toBottomOf="@+id/appCompatTextView26">



                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/appCompatImageView6"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_dollar_coin"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/totalPointTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1400"
                        android:textSize="48sp"
                        android:gravity="bottom"
                        android:layout_marginStart="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView6"
                        app:layout_constraintStart_toEndOf="@+id/appCompatImageView6" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/pointTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Point"
                        android:textSize="32sp"
                        android:layout_marginStart="4dp"
                        app:layout_constraintBottom_toBottomOf="@+id/totalPointTV"
                        app:layout_constraintStart_toEndOf="@+id/totalPointTV" />


                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/addYourHomeBtn"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    setVisibilityGone="@{(viewModel.houseSwap == null &amp;&amp; viewModel.type == 2)}"
                    android:background="@drawable/dotted_border_bg"
                    app:layout_constraintTop_toBottomOf="@+id/pointLayout">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_plus"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <include
                    layout="@layout/search_home_item"
                    app:layout_constraintTop_toBottomOf="@id/addYourHomeBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="10dp"
                    setVisibilityGone="@{(viewModel.houseSwap != null &amp;&amp; viewModel.type == 2)}"
                    android:visibility="gone"
                    app:home="@{viewModel.houseSwap}"
                    android:id="@+id/swapHome"
                    android:layout_marginTop="16dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/appCompatTextView27"
                    style="@style/Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:text="Chọn thời gian trao đổi"
                    android:textColor="@color/black_60"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/swapHome" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/pickDateLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/filter_bg"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="16dp"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/changeDateBtn"
                    app:layout_constraintTop_toBottomOf="@id/appCompatTextView27">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/appCompatTextView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/from_date"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iconFromDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_from_date"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/appCompatTextView2"
                        app:layout_constraintTop_toBottomOf="@+id/appCompatTextView2" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/fromDateTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@{NumberExtenstionKt.longToDate(viewModel.startDate.time.time)}"
                        android:layout_marginEnd="4dp"
                        android:gravity="center"
                        style="@style/SmallText"
                        app:layout_constraintBottom_toBottomOf="@+id/iconFromDate"
                        app:layout_constraintEnd_toStartOf="@+id/guideline7"
                        app:layout_constraintStart_toEndOf="@+id/iconFromDate"
                        app:layout_constraintTop_toTopOf="@+id/iconFromDate" />

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        app:layout_constraintStart_toStartOf="@id/guideline7"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:dividerColor="@color/divider"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/appCompatTextView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/to_date"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="@+id/guideline7"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iconToDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/ic_to_date"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/appCompatTextView3"
                        app:layout_constraintTop_toBottomOf="@+id/appCompatTextView3" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/toDateTV"
                        style="@style/SmallText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@{NumberExtenstionKt.longToDate(viewModel.endDate.time.time)}"
                        android:gravity="center"
                        app:layout_constraintBottom_toBottomOf="@+id/iconToDate"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/iconToDate"
                        app:layout_constraintTop_toTopOf="@+id/iconToDate" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/SmallButtonOutline"
                    android:id="@+id/changeDateBtn"
                    android:text="@string/change_date"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/pickDateLayout"
                    app:layout_constraintBottom_toBottomOf="@id/pickDateLayout"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/ButtonPrimary"
                    android:text="@string/create_request"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="24dp"
                    android:id="@+id/createRequestBtn"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/pickDateLayout"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</layout>