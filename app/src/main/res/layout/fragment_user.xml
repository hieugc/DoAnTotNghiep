<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="user"
            type="com.homex.core.model.Profile" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:fitsSystemWindows="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/userLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/secondary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvNameAccount"
                    android:textSize="24sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:text="@{user.fullName}"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ivAvatar"
                    app:layout_constraintTop_toTopOf="@+id/ivAvatar" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvOldMaleAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/gray"
                    app:dob="@{user.birthDay}"
                    app:gender="@{user.gender}"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@+id/tvNameAccount"
                    app:layout_constraintTop_toBottomOf="@+id/tvNameAccount" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/appCompatTextView14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_mail"
                    android:drawablePadding="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp"
                    android:text="@{user.email}"
                    android:textColor="@color/gray_light_2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline19"
                    app:layout_constraintStart_toStartOf="@+id/ivAvatar"
                    app:layout_constraintTop_toBottomOf="@+id/ivAvatar" />

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/materialDivider"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:background="@color/gray6"
                    app:layout_constraintBottom_toBottomOf="@+id/appCompatTextView14"
                    app:layout_constraintEnd_toStartOf="@+id/guideline19"
                    app:layout_constraintStart_toStartOf="@+id/guideline19"
                    app:layout_constraintTop_toTopOf="@+id/appCompatTextView14" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_phone"
                    android:drawablePadding="8dp"
                    android:ellipsize="end"
                    android:layout_marginStart="32dp"
                    android:maxLines="1"
                    android:text="@{user.phoneNumber}"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/gray_light_2"
                    app:layout_constraintBottom_toBottomOf="@+id/appCompatTextView14"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/guideline19"
                    app:layout_constraintTop_toTopOf="@+id/appCompatTextView14" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/llProfileNoLogin"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/userLayout"
                android:padding="16dp"
                android:background="@color/secondary"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnLogin"
                    style="@style/ButtonPrimary"
                    android:layout_width="match_parent"
                    android:height="40dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:text="@string/sign_in_sign_up" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:layout_marginTop="16dp"
                    android:text="@string/login_to_use"
                    android:textColor="@color/gray_light_2"
                    app:layout_constraintBottom_toBottomOf="@+id/appCompatTextView14"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/guideline19"
                    app:layout_constraintTop_toTopOf="@+id/appCompatTextView14" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llProfileNoLogin">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnMyProfile"
                    style="@style/ButtonProfile"
                    android:drawableStart="@drawable/ic_account"
                    android:text="@string/my_profile" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnYourHouse"
                    style="@style/ButtonProfile"
                    android:drawableStart="@drawable/ic_profile_house"
                    android:text="@string/your_house" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnPendingRequests"
                    style="@style/ButtonProfile"
                    android:drawableStart="@drawable/ic_navigation_arrow"
                    android:text="@string/pending_request" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnHistory"
                    style="@style/ButtonProfile"
                    android:drawableStart="@drawable/ic_history"
                    android:text="@string/requests_history" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCircleRequest"
                    style="@style/ButtonProfile"
                    android:drawableStart="@drawable/ic_circle_request"
                    android:text="@string/circle_request" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnManual"
                    style="@style/ButtonProfile"
                    android:drawableStart="@drawable/ic_books"
                    android:text="@string/user_manual" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnPoint"
                    style="@style/ButtonProfile"
                    android:drawableStart="@drawable/ic_dollar_coin"
                    android:text="@string/your_point" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnLogout"
                    style="@style/ButtonProfile"
                    android:layout_marginTop="16dp"
                android:drawableStart="@drawable/ic_logout"
                android:text="@string/logout"
                    android:layout_marginBottom="16dp"
                />




            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</layout>