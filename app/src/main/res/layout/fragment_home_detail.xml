<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="home"
            type="com.homex.core.model.Home" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/imgSlideViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.google.android.material.tabs.TabLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:tabBackground="@drawable/tab_bg"
                    android:background="#0000"
                    app:tabGravity="center"
                    app:tabIndicatorHeight="0dp"
                    app:layout_constraintBottom_toBottomOf="@id/imgSlideViewPager"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/tabLayout"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingIcon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imgSlideViewPager"
                    android:src="@drawable/ic_rating"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/ratingTV"
                    style="@style/HomeRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@{home.rating.toString()}"
                    app:layout_constraintStart_toEndOf="@+id/ratingIcon"
                    app:layout_constraintBottom_toBottomOf="@id/ratingIcon"
                    app:layout_constraintTop_toTopOf="@+id/ratingIcon" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/numberOfRatingTV"
                    style="@style/HomeRating"
                    android:textColor="@color/gray6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{`(` + home.numberRating + ` đánh giá)`}"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@+id/ratingTV"
                    app:layout_constraintBottom_toBottomOf="@id/ratingTV"
                    app:layout_constraintTop_toTopOf="@+id/ratingTV" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/homeName"
                    app:layout_constraintTop_toBottomOf="@id/ratingIcon"
                    android:text="@{home.name}"
                    app:layout_constraintStart_toStartOf="@id/ratingIcon"
                    android:layout_marginTop="16dp"
                    style="@style/HomeTitle"
                    android:textStyle="bold"
                    />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/appCompatImageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_location"
                    app:layout_constraintStart_toStartOf="@id/homeName"
                    app:layout_constraintTop_toTopOf="@id/homeLocation"
                    app:layout_constraintBottom_toBottomOf="@id/homeLocation"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/homeLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@{home.fullLocation}"
                    android:maxWidth="200dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toEndOf="@+id/appCompatImageView3"
                    app:layout_constraintTop_toBottomOf="@id/homeName" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/showMap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/see_maps"
                    android:textColor="@color/link"
                    android:background="@drawable/ripple_white_bg"
                    app:layout_constraintHorizontal_bias="0"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintBottom_toBottomOf="@id/homeLocation"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/homeLocation"
                    app:layout_constraintTop_toTopOf="@id/homeLocation" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/materialDivider18"
                    app:dividerColor="@color/divider"
                    app:layout_constraintTop_toBottomOf="@id/appCompatImageView3"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/userLayout"
                    app:layout_constraintStart_toStartOf="@id/materialDivider18"
                    app:layout_constraintTop_toBottomOf="@id/materialDivider18">


                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/homeUserAvatar"
                    android:src="@mipmap/avatar"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/homeUserName"
                    android:text="@{home.user.fullName}"
                    app:layout_constraintTop_toTopOf="@id/homeUserAvatar"
                    app:layout_constraintStart_toEndOf="@id/homeUserAvatar"
                    android:layout_marginStart="16dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/homeUserName"
                    android:id="@+id/homeUserOnline"
                    style="@style/SmallText"
                    android:textColor="@color/gray"
                    app:layout_constraintStart_toStartOf="@id/homeUserName"/>

                <LinearLayout
                    android:id="@+id/homeUserVerified"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/homeUserOnline"
                    app:layout_constraintStart_toStartOf="@id/homeUserOnline"
                    android:orientation="horizontal"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@id/contactBtn"
                    android:layout_marginTop="4dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_check_circle"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/verified"
                        android:layout_marginStart="4dp"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/contactBtn"
                    style="@style/SmallButtonPrimary"
                    android:text="@string/contact"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toTopOf="@id/homeUserName"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/SmallButtonOutline"
                    android:id="@+id/reportBtn"
                    app:layout_constraintTop_toBottomOf="@id/contactBtn"
                    app:layout_constraintEnd_toEndOf="@id/contactBtn"
                    android:layout_marginTop="8dp"
                    android:text="@string/report_short"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/homeUserNOH"
                    android:text="@{home.user.numberOfHouses.toString()}"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/homeUserVerified"
                    app:layout_constraintStart_toStartOf="@id/homeUserAvatar"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/numberOfHome"
                    android:text="@string/apartment"
                    android:layout_marginStart="4dp"
                    app:layout_constraintTop_toTopOf="@id/homeUserNOH"
                    app:layout_constraintStart_toEndOf="@id/homeUserNOH"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/homeUserRating"
                    android:text="@{home.user.userRating.toString()}"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@id/homeUserNOH"
                    app:layout_constraintStart_toEndOf="@id/numberOfHome"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/userRating"
                    android:text="@string/rate"
                    android:layout_marginStart="4dp"
                    app:layout_constraintTop_toTopOf="@id/homeUserRating"
                    app:layout_constraintStart_toEndOf="@id/homeUserRating"
                    />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:id="@+id/materialDivider19"
                    app:layout_constraintTop_toBottomOf="@id/homeUserNOH"
                    android:layout_marginTop="16dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/basic_info"
                    android:id="@+id/homeBasicInformation"
                    app:layout_constraintTop_toBottomOf="@id/userLayout"
                    app:layout_constraintStart_toStartOf="@id/userLayout"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/black_60"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/homeBasicInformation">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/homeIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_home_type"
                        app:layout_constraintEnd_toStartOf="@+id/areaIcon"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/homeTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@{home.homeType}"
                        app:layout_constraintEnd_toEndOf="@id/homeIcon"
                        app:layout_constraintStart_toStartOf="@id/homeIcon"
                        app:layout_constraintTop_toBottomOf="@id/homeIcon" />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/areaIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_area"
                        app:layout_constraintEnd_toStartOf="@+id/bedIcon"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/homeIcon"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/areaTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@{home.square + ` m2`}"
                        app:layout_constraintEnd_toEndOf="@id/areaIcon"
                        app:layout_constraintStart_toStartOf="@id/areaIcon"
                        app:layout_constraintTop_toBottomOf="@id/areaIcon" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/bedIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_bed"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/areaIcon"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/bedTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@{home.bed + ` giường`}"
                        app:layout_constraintEnd_toEndOf="@id/bedIcon"
                        app:layout_constraintStart_toStartOf="@id/bedIcon"
                        app:layout_constraintTop_toBottomOf="@id/bedIcon" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/roomIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_room"
                        app:layout_constraintEnd_toStartOf="@+id/bathIcon"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/roomTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@{home.bedRoom + ` phòng ngủ`}"
                        app:layout_constraintEnd_toEndOf="@id/roomIcon"
                        app:layout_constraintStart_toStartOf="@id/roomIcon"
                        app:layout_constraintTop_toBottomOf="@id/roomIcon" />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/bathIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_bath"
                        app:layout_constraintEnd_toStartOf="@+id/personIcon"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/roomIcon"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/bathTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@{home.bathRoom + ` phòng tắm`}"
                        app:layout_constraintEnd_toEndOf="@id/bathIcon"
                        app:layout_constraintStart_toStartOf="@id/bathIcon"
                        app:layout_constraintTop_toBottomOf="@id/bathIcon" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/personIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_ppl"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/bathIcon"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/personTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@{home.people + ` người`}"
                        app:layout_constraintEnd_toEndOf="@id/personIcon"
                        app:layout_constraintStart_toStartOf="@id/personIcon"
                        app:layout_constraintTop_toBottomOf="@id/personIcon" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:dividerColor="@color/divider"
                    android:layout_marginTop="16dp"
                    android:id="@+id/materialDivider20"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout3" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    android:id="@+id/homeDescription"
                    app:layout_constraintTop_toBottomOf="@id/materialDivider20"
                    app:layout_constraintStart_toStartOf="@id/materialDivider20"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/black_60"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/homeDescriptionTV"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@id/homeDescription"
                    android:layout_marginTop="16dp"
                    android:text="@{home.description}"/>


                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:dividerColor="@color/divider"
                    android:layout_marginTop="16dp"
                    android:id="@+id/materialDivider21"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/homeDescriptionTV" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/util"
                    android:id="@+id/homeUtil"
                    setVisibilityGone="@{!home.utilities.empty &amp;&amp; home.utilities != null}"
                    app:layout_constraintTop_toBottomOf="@id/materialDivider21"
                    app:layout_constraintStart_toStartOf="@id/materialDivider21"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/black_60"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/see_more_html"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/SmallText"
                    android:visibility="gone"
                    android:id="@+id/showAllUtil"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="@id/homeUtil"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/utilRecView"
                    setVisibilityGone="@{!home.utilities.empty &amp;&amp; home.utilities != null}"
                    app:layout_constraintTop_toBottomOf="@id/homeUtil"
                    />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:dividerColor="@color/divider"
                    android:id="@+id/materialDivider22"
                    setVisibilityGone="@{!home.utilities.empty &amp;&amp; home.utilities != null}"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/utilRecView" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rules"
                    setVisibilityGone="@{!home.rules.empty &amp;&amp; home.rules != null}"
                    android:id="@+id/homeRule"
                    app:layout_constraintTop_toBottomOf="@id/materialDivider22"
                    app:layout_constraintStart_toStartOf="@id/materialDivider22"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/black_60"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rulesRecView"
                    setVisibilityGone="@{!home.rules.empty &amp;&amp; home.rules != null}"
                    app:layout_constraintTop_toBottomOf="@id/homeRule"
                    />


                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:dividerColor="@color/divider"
                    setVisibilityGone="@{!home.rules.empty &amp;&amp; home.rules != null}"
                    android:id="@+id/materialDivider23"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/rulesRecView" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{`Đánh giá (` + home.numberRating + `)`}"
                    android:id="@+id/homeNumberOfRating"
                    setVisibilityGone="@{!home.ratings.empty &amp;&amp; home.ratings != null}"
                    app:layout_constraintTop_toBottomOf="@id/materialDivider23"
                    app:layout_constraintStart_toStartOf="@id/materialDivider23"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/black_60"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@+id/homeNumberOfRating"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center"
                    android:background="@drawable/ripple_white_bg"
                    android:clickable="true"
                    android:visibility="gone"
                    android:focusable="true"
                    android:padding="4dp"
                    android:layout_marginEnd="12dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/SmallText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/see_all"
                        android:textColor="@color/primary"
                        android:layout_marginEnd="8dp"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="@color/primary"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/homeRatingRecView"
                    setVisibilityGone="@{!home.ratings.empty &amp;&amp; home.ratings != null}"
                    app:layout_constraintTop_toBottomOf="@id/homeNumberOfRating"
                    android:layout_marginTop="16dp"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:orientation="horizontal"
                    android:overScrollMode="never"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    />
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:dividerColor="@color/divider"
                    android:id="@+id/materialDivider24"
                    android:layout_marginStart="16dp"
                    android:visibility="gone"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/homeRatingRecView" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/similiar_house"
                    android:id="@+id/homeSimilar"
                    app:layout_constraintTop_toBottomOf="@id/materialDivider24"
                    app:layout_constraintStart_toStartOf="@id/materialDivider24"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    android:textColor="@color/black_60"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/homeSimilarRecView"
                    app:layout_constraintTop_toBottomOf="@id/homeSimilar"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:id="@+id/pickDateLayout"
            android:background="@drawable/bottom_sheet_round_bg">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/changeDateBtn"
                android:orientation="vertical"
                android:gravity="center">


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
