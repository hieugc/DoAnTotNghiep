<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="request"
            type="com.homex.core.model.response.CircleRequest" />

        <import type="com.example.homex.extension.StatusWaitingRequest" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_gray"
                android:paddingBottom="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/statusLayout">


                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Regular"
                        android:id="@+id/appCompatTextView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        android:text="@string/request_status"
                        android:textColor="@color/black_60" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvRequestStatus"
                        style="@style/Regular"
                        CircleRequestStatus="@{request.status}"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:textColor="@color/black_60"
                        app:layout_constraintBottom_toBottomOf="@id/appCompatTextView3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/appCompatTextView3"
                        app:layout_constraintTop_toTopOf="@id/appCompatTextView3" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/requestTxt"
                        circleRequestText="@{request.status}"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/primary"
                        app:layout_constraintEnd_toStartOf="@+id/appCompatImageView10"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvRequestStatus" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/appCompatImageView10"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="16dp"
                        android:src="@mipmap/request"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/requestTxt" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/appCompatTextView"
                    style="@style/Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/you_will_come_to"
                    android:textColor="@color/black_60"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/statusLayout" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/appCompatTextView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivAvatar"
                            loadAvatar="@{request.nextNode.user.urlImage}"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/avatar" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvUserName"
                            style="@style/MediumText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:text="@{request.nextNode.user.fullName}" />
                    </LinearLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            loadImage="@{request.nextNode.imgHouse.data}"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:src="@mipmap/location" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="8dp"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvTitle"
                                style="@style/HomeTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{request.nextNode.house.name}"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/MediumText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:drawableStart="@drawable/ic_ppl"
                                android:drawablePadding="8dp"
                                android:gravity="center_vertical"
                                android:text="@{request.nextNode.house.people + ` người`}" />

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/MediumText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@{request.nextNode.house.price + ` point/ngày`}"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="end">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/ratingTV"
                                    style="@style/HomeRating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="4dp"
                                    android:text="@{request.nextNode.house.rating.toString()}"
                                    android:textAlignment="center" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/numberOfRatingTV"
                                    style="@style/HomeRating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:drawableEnd="@drawable/ic_rating"
                                    android:drawablePadding="8dp"
                                    android:gravity="center_vertical"
                                    android:text="@{`(` + request.nextNode.house.numberRating + `)`}"
                                    android:textColor="@color/gray6" />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/contactBtnTo"
                    style="@style/FlexLongButtonSecondary"
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    android:text="@string/contact"
                    app:layout_constraintTop_toBottomOf="@id/linearLayout" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/appCompatTextView1"
                    style="@style/Regular"
                    userToYourHouse="@{request.prevNode.user.fullName}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/black_60"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/contactBtnTo" />

                <LinearLayout
                    android:id="@+id/offerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@id/appCompatTextView1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivAvatar1"
                            loadAvatar="@{request.myNode.user.urlImage}"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/avatar" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvUserName1"
                            style="@style/MediumText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:textColor="@color/primary"
                            android:text="@string/you" />
                    </LinearLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            loadImage="@{request.myNode.imgHouse.data}"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:src="@mipmap/location" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="8dp"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvOfferTitle"
                                style="@style/HomeTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{request.myNode.house.name}"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/MediumText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:drawableStart="@drawable/ic_ppl"
                                android:drawablePadding="8dp"
                                android:gravity="center_vertical"
                                android:text="@{request.myNode.house.people + ` người`}" />

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/MediumText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@{request.myNode.house.price + ` point/ngày`}"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="end">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/offerRatingTV"
                                    style="@style/HomeRating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="4dp"
                                    android:text="@{request.myNode.house.rating.toString()}"
                                    android:textAlignment="center" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/offerNumberOfRatingTV"
                                    style="@style/HomeRating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:drawableEnd="@drawable/ic_rating"
                                    android:drawablePadding="8dp"
                                    android:gravity="center_vertical"
                                    android:text="@{`(` + request.myNode.house.numberRating + `)`}"
                                    android:textColor="@color/gray6" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/contactBtnFrom"
                    style="@style/FlexLongButtonSecondary"
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    android:text="@string/contact"
                    app:layout_constraintTop_toBottomOf="@id/offerLayout" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/appCompatTextView2"
                    style="@style/Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/time"
                    android:textColor="@color/black_60"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/contactBtnFrom" />

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_white_corner_radius"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    app:layout_constraintTop_toBottomOf="@id/appCompatTextView2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/MediumText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/from_date" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/MediumText"
                            dateFormat="@{request.startDate}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:drawableStart="@drawable/ic_from_date"
                            android:gravity="center" />
                    </LinearLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/divider" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/MediumText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/to_date" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/MediumText"
                            dateFormat="@{request.endDate}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:drawableStart="@drawable/ic_to_date"
                            android:gravity="center" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/rejectBtn"
                style="@style/ButtonOutline"
                fullStatusCircle="@{request.status}"
                myStatusCircle="@{request.myNode.status}"
                android:layout_width="0dp"
                android:layout_margin="8dp"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acceptBtn"
                style="@style/ButtonPrimary"
                endDateCircle="@{request.endDate}"
                fullStatusCircle="@{request.status}"
                myStatusCircle="@{request.myNode.status}"
                startDateCircle="@{request.startDate}"
                android:layout_width="0dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent" />

        </LinearLayout>
    </LinearLayout>

</layout>