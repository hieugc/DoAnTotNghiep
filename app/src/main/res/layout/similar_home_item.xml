<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/shadow_layout"
        android:layout_marginBottom="16dp">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"

    android:elevation="0dp"
    android:id="@+id/homeSearchItem">




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/homeImg"
            android:layout_width="150dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@mipmap/location"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/homeName"
            style="@style/HomeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhà của Hiếu"
            app:layout_constraintStart_toEndOf="@+id/homeImg"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pplIcon"
            app:layout_constraintTop_toBottomOf="@id/homeName"
            android:src="@drawable/ic_ppl"
            app:layout_constraintStart_toStartOf="@id/homeName"
            android:layout_marginTop="8dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 người"
            android:layout_marginStart="8dp"
            android:id="@+id/homeNOP"
            style="@style/HomeTitle"
            app:layout_constraintStart_toEndOf="@id/pplIcon"
            app:layout_constraintTop_toTopOf="@id/pplIcon"
            app:layout_constraintBottom_toBottomOf="@id/pplIcon"/>


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_rating"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ratingTV"
            style="@style/HomeRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="4.8"
            app:layout_constraintBottom_toBottomOf="@id/ratingIcon"
            app:layout_constraintEnd_toStartOf="@+id/numberOfRatingTV"
            app:layout_constraintTop_toTopOf="@+id/ratingIcon" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/numberOfRatingTV"
            style="@style/HomeRating"
            android:textColor="@color/gray6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(10)"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@id/ratingIcon"
            app:layout_constraintEnd_toStartOf="@+id/ratingIcon"
            app:layout_constraintTop_toTopOf="@+id/ratingIcon" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/homePriceTV"
            style="@style/HomePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:text="200 Points/ngày"
            app:layout_constraintStart_toStartOf="@id/homeName"
            app:layout_constraintTop_toBottomOf="@+id/pplIcon" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
    </LinearLayout>

</layout>
