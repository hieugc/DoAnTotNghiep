<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_gray">

        <LinearLayout
            android:id="@+id/llPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_blue"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="14dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:scaleX="1.4"
                android:scaleY="1.4"
                android:src="@drawable/ic_dollar_coin" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPointAvailable"
                style="@style/GiantText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1200" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Points khả dụng" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRate"
                style="@style/SmallButtonPrimary"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:text="@string/top_up_point" />

        </LinearLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/llPoint"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>
</layout>