<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_corner_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/closeBtn"
            style="@style/AppTheme.Icon"
            android:src="@drawable/ic_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="6dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pointAmountInputLayout"
            style="@style/AppTheme.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="32dp"
            android:hint="@string/input_point_amount_hint">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pointAmountInputEdtTxt"
                style="@style/AppTheme.TextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:inputType="number"
                android:textAlignment="center" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/point_equivalence"
            android:textSize="12sp"
            android:textColor="@color/gray6"
            android:textStyle="italic"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/pointAmountInputLayout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>

        <TextView
            android:id="@+id/tvPaymentMethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/payment_method"
            app:layout_constraintTop_toBottomOf="@id/tvGuide"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            android:layout_marginStart="32dp"/>

        <RadioGroup
            android:id="@+id/paymentRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:checkedButton="@id/zaloPay"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPaymentMethod">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/zaloPay"/>

                <androidx.appcompat.widget.AppCompatImageView
                    style="@style/AppTheme.Icon"
                    android:layout_width="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_height="48dp"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:src="@mipmap/zalopay"/>

            </LinearLayout>

<!--            <LinearLayout-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_weight="1"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:gravity="center_vertical"-->
<!--                android:orientation="horizontal">-->

<!--                <androidx.appcompat.widget.AppCompatRadioButton-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:enabled="false"-->
<!--                    android:id="@+id/momo"/>-->

<!--                <androidx.appcompat.widget.AppCompatImageView-->
<!--                    style="@style/AppTheme.Icon"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:adjustViewBounds="true"-->
<!--                    android:layout_height="48dp"-->
<!--                    android:scaleType="centerInside"-->
<!--                    android:src="@drawable/momo"/>-->

<!--            </LinearLayout>-->

        </RadioGroup>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnTopup"
            style="@style/ButtonPrimary"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/paymentRadioGroup"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="32dp"
            android:text="@string/top_up_point" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>