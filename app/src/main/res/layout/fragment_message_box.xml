<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_e">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/messageRecView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:listitem="@layout/my_message_item"
            app:layout_constraintBottom_toTopOf="@id/msgInputLayout"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/msgInputLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingVertical="4dp"
            android:background="@color/white">

            <androidx.appcompat.widget.AppCompatImageView
                style="@style/AppTheme.Icon"
                android:id="@+id/addBtn"
                android:layout_marginStart="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_pluscircle"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/AppTheme.EditText"
                app:layout_constraintStart_toEndOf="@id/addBtn"
                app:layout_constraintEnd_toStartOf="@id/sendBtn"
                android:id="@+id/msgEditText"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:hint="@string/text"
                android:imeOptions="actionDone"/>

            <androidx.appcompat.widget.AppCompatImageView
                style="@style/AppTheme.Icon"
                android:id="@+id/sendBtn"
                android:layout_marginEnd="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_pointer"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>