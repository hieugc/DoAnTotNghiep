<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_e">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/messageShimmer"
            app:layout_constraintBottom_toTopOf="@id/msgInputLayout"
            app:layout_constraintTop_toTopOf="parent" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="8dp">

                <include layout="@layout/message_shimmer"/>
                <include layout="@layout/my_message_shimmer"/>
                <include layout="@layout/message_shimmer"/>
                <include layout="@layout/my_message_shimmer"/>
                <include layout="@layout/my_message_shimmer"/>
                <include layout="@layout/message_shimmer"/>
                <include layout="@layout/message_shimmer"/>
                <include layout="@layout/my_message_shimmer"/>
                <include layout="@layout/message_shimmer"/>
                <include layout="@layout/my_message_shimmer"/>
                <include layout="@layout/message_shimmer"/>
                <include layout="@layout/my_message_shimmer"/>
                <include layout="@layout/message_shimmer"/>
                <include layout="@layout/my_message_shimmer"/>
                <include layout="@layout/my_message_shimmer"/>
                <include layout="@layout/my_message_shimmer"/>
                <include layout="@layout/message_shimmer"/>
                <include layout="@layout/my_message_shimmer"/>

            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/messageRecView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="18"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            tools:listitem="@layout/my_message_item"
            app:layout_constraintBottom_toTopOf="@id/msgInputLayout"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/msgInputLayout"
            app:layout_constraintBottom_toTopOf="@id/actionLayout"
            android:paddingVertical="4dp"
            android:background="@color/white">

            <androidx.appcompat.widget.AppCompatImageView
                style="@style/AppTheme.Icon"
                android:id="@+id/addBtn"
                android:layout_marginStart="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_pluscircle"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/AppTheme.EditText"
                app:layout_constraintStart_toEndOf="@id/addBtn"
                app:layout_constraintEnd_toStartOf="@id/sendBtn"
                android:id="@+id/msgEditText"
                android:layout_marginStart="2dp"
                android:textSize="14sp"
                android:layout_marginEnd="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:hint="@string/text"
                android:imeOptions="actionDone"/>

            <androidx.appcompat.widget.AppCompatImageView
                style="@style/AppTheme.Icon"
                android:id="@+id/sendBtn"
                android:layout_marginEnd="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_pointer"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/actionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_gray"
            android:padding="16dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:id="@+id/createRequestBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/appCompatImageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_white_corner_radius"
                    android:padding="16dp"
                    android:src="@drawable/ic_exchange"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/create_request"
                    app:layout_constraintEnd_toEndOf="@id/appCompatImageView9"
                    app:layout_constraintStart_toStartOf="@id/appCompatImageView9"
                    app:layout_constraintTop_toBottomOf="@+id/appCompatImageView9" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>