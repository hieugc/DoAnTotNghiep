<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/homeImage"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="fitXY"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@mipmap/location"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingIcon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/homeImage"
                    android:src="@drawable/ic_rating"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/ratingTV"
                    style="@style/HomeRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="4.8"
                    app:layout_constraintStart_toEndOf="@+id/ratingIcon"
                    app:layout_constraintBottom_toBottomOf="@id/ratingIcon"
                    app:layout_constraintTop_toTopOf="@+id/ratingIcon" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/numberOfRatingTV"
                    style="@style/HomeRating"
                    android:textColor="@color/gray6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(10 đánh giá)"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@+id/ratingTV"
                    app:layout_constraintBottom_toBottomOf="@id/ratingTV"
                    app:layout_constraintTop_toTopOf="@+id/ratingTV" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/appCompatTextView31"
                    style="@style/SmallText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/status"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/homeImage" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/homeStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đang hoạt động"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/green"
                    app:layout_constraintEnd_toEndOf="@+id/appCompatTextView31"
                    app:layout_constraintTop_toBottomOf="@+id/appCompatTextView31" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/homeName"
                    app:layout_constraintTop_toBottomOf="@id/ratingIcon"
                    android:text="Nhà của Hiếu"
                    app:layout_constraintStart_toStartOf="@id/ratingIcon"
                    android:layout_marginTop="16dp"
                    style="@style/HomeTitle"
                    android:textStyle="bold"
                    />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/appCompatImageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_location"
                    app:layout_constraintStart_toStartOf="@id/homeName"
                    app:layout_constraintTop_toBottomOf="@id/homeName" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dĩ An, Bình Dương |"
                    android:id="@+id/homeLocation"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView3"
                    app:layout_constraintStart_toEndOf="@+id/appCompatImageView3"
                    app:layout_constraintTop_toTopOf="@+id/appCompatImageView3" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/appCompatTextView25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Xem bản đồ >"
                    android:textColor="@color/link"
                    app:layout_constraintBottom_toBottomOf="@id/homeLocation"
                    app:layout_constraintStart_toEndOf="@id/homeLocation"
                    app:layout_constraintTop_toTopOf="@id/homeLocation" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:id="@+id/materialDivider19"
                    app:layout_constraintTop_toBottomOf="@id/appCompatTextView25"
                    android:layout_marginTop="16dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông tin cơ bản"
                    android:id="@+id/homeBasicInformation"
                    app:layout_constraintTop_toBottomOf="@id/materialDivider19"
                    app:layout_constraintStart_toStartOf="@id/materialDivider19"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/black_60"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/homeBasicInformation">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/homeIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_home_type"
                        app:layout_constraintEnd_toStartOf="@+id/areaIcon"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/homeTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Căn nhà"
                        app:layout_constraintEnd_toEndOf="@id/homeIcon"
                        app:layout_constraintStart_toStartOf="@id/homeIcon"
                        app:layout_constraintTop_toBottomOf="@id/homeIcon" />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/areaIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_area"
                        app:layout_constraintEnd_toStartOf="@+id/bedIcon"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/homeIcon"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/areaTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="300 m2"
                        app:layout_constraintEnd_toEndOf="@id/areaIcon"
                        app:layout_constraintStart_toStartOf="@id/areaIcon"
                        app:layout_constraintTop_toBottomOf="@id/areaIcon" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/bedIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_bed"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/areaIcon"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/bedTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="2 giường"
                        app:layout_constraintEnd_toEndOf="@id/bedIcon"
                        app:layout_constraintStart_toStartOf="@id/bedIcon"
                        app:layout_constraintTop_toBottomOf="@id/bedIcon" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/roomIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_room"
                        app:layout_constraintEnd_toStartOf="@+id/bathIcon"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/roomTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="2 phòng ngủ"
                        app:layout_constraintEnd_toEndOf="@id/roomIcon"
                        app:layout_constraintStart_toStartOf="@id/roomIcon"
                        app:layout_constraintTop_toBottomOf="@id/roomIcon" />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/bathIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_bath"
                        app:layout_constraintEnd_toStartOf="@+id/personIcon"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/roomIcon"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/bathTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="2 phòng tắm"
                        app:layout_constraintEnd_toEndOf="@id/bathIcon"
                        app:layout_constraintStart_toStartOf="@id/bathIcon"
                        app:layout_constraintTop_toBottomOf="@id/bathIcon" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/personIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_ppl"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/bathIcon"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/personTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="4 người"
                        app:layout_constraintEnd_toEndOf="@id/personIcon"
                        app:layout_constraintStart_toStartOf="@id/personIcon"
                        app:layout_constraintTop_toBottomOf="@id/personIcon" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:dividerColor="@color/divider"
                    android:layout_marginTop="16dp"
                    android:id="@+id/materialDivider20"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout3" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giới thiệu"
                    android:id="@+id/homeDescription"
                    app:layout_constraintTop_toBottomOf="@id/materialDivider20"
                    app:layout_constraintStart_toStartOf="@id/materialDivider20"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/black_60"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/homeDescriptionTV"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@id/homeDescription"
                    android:layout_marginTop="16dp"
                    android:text="@string/lorem_long"/>


                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:dividerColor="@color/divider"
                    android:layout_marginTop="16dp"
                    android:id="@+id/materialDivider21"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/homeDescriptionTV" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiện ích"
                    android:id="@+id/homeUtil"
                    app:layout_constraintTop_toBottomOf="@id/materialDivider21"
                    app:layout_constraintStart_toStartOf="@id/materialDivider21"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/black_60"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem thêm"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/SmallText"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="@id/homeUtil"
                    />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:dividerColor="@color/divider"
                    android:layout_marginTop="16dp"
                    android:id="@+id/materialDivider22"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/homeUtil" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quy định"
                    android:id="@+id/homeRule"
                    app:layout_constraintTop_toBottomOf="@id/materialDivider22"
                    app:layout_constraintStart_toStartOf="@id/materialDivider22"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/black_60"
                    />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:dividerColor="@color/divider"
                    android:layout_marginTop="16dp"
                    android:id="@+id/materialDivider23"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/homeRule" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đánh giá (10)"
                    android:id="@+id/homeNumberOfRating"
                    app:layout_constraintTop_toBottomOf="@id/materialDivider23"
                    app:layout_constraintStart_toStartOf="@id/materialDivider23"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/black_60"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@+id/homeNumberOfRating"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center"
                    android:background="@drawable/ripple_white_bg"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="4dp"
                    android:layout_marginEnd="12dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/SmallText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/see_all"
                        android:textColor="@color/primary"
                        android:layout_marginEnd="8dp"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="@color/primary"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/homeRatingRecView"
                    app:layout_constraintTop_toBottomOf="@id/homeNumberOfRating"
                    android:layout_marginTop="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</layout>