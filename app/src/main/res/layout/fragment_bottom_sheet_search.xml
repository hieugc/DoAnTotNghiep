<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.home.search.BottomSheetSearchFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleLayout"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextView5"
            style="@style/Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/find_location"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/closeBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/closeBtn" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/closeBtn"
            style="@style/AppTheme.Icon"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_close"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/materialDivider5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            app:dividerColor="@color/divider"
            app:layout_constraintTop_toBottomOf="@id/closeBtn" />

    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:background="@drawable/search_bg"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titleLayout"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/grey_light"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/searchEdtTxt"
            style="@style/AppTheme.EditText"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="8dp"
            android:drawableTint="@color/secondary_60"
            android:hint="@string/search"
            android:imeOptions="actionDone" />

    </androidx.cardview.widget.CardView>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cardView"
        android:progressTint="@color/primary"
        app:trackColor="@color/primary_light"
        android:visibility="gone"
        android:id="@+id/progressIndicator"
        app:indicatorColor="@color/primary"
        android:indeterminate="true"
        app:trackCornerRadius="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/cardView"
        app:layout_constraintEnd_toEndOf="@id/cardView"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/rvSuggestion"
        app:layout_constraintTop_toBottomOf="@id/progressIndicator"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/cardView"
        app:layout_constraintEnd_toEndOf="@id/cardView"/>
</androidx.constraintlayout.widget.ConstraintLayout>

</layout>
