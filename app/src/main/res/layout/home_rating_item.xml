<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp"
    android:layout_marginBottom="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rating1"
                android:src="@drawable/ic_star"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rating2"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_star"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rating3"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_star"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rating4"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_star"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rating5"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_star"/>

        </LinearLayout>




        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lộc Minh Hiếu"
            android:id="@+id/ratingUser"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            style="@style/HomePrice"
            app:layout_constraintTop_toBottomOf="@id/ratingLayout"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lorem"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:maxLines="4"
            android:ellipsize="end"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/ratingUser"
            android:id="@+id/ratingContent"
            style="@style/HomeTitle"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/locationTV"
            style="@style/Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="30/11/2022"
            android:textColor="@color/gray6"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/ratingUser"
            app:layout_constraintTop_toTopOf="@id/ratingUser"
            app:layout_constraintBottom_toBottomOf="@id/ratingUser"/>


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ratingContent"
            android:src="@drawable/ic_like"
            app:layout_constraintStart_toStartOf="@id/ratingContent"
            android:id="@+id/likeIcon"
            android:layout_marginTop="8dp"
            />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ratingLikeTV"
            style="@style/Regular"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 lượt thich"
            app:layout_constraintStart_toEndOf="@id/likeIcon"
            app:layout_constraintTop_toTopOf="@id/likeIcon"
            app:layout_constraintBottom_toBottomOf="@id/likeIcon"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>