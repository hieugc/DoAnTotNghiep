<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="16dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rating1"
                setVisibilityGone="@{rating.feedBack.rating > 0}"
                android:src="@drawable/ic_star"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rating2"
                setVisibilityGone="@{rating.feedBack.rating > 1}"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_star"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rating3"
                setVisibilityGone="@{rating.feedBack.rating > 2}"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_star"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rating4"
                setVisibilityGone="@{rating.feedBack.rating > 3}"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_star"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rating5"
                setVisibilityGone="@{rating.feedBack.rating > 4}"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_star"/>

        </LinearLayout>




        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{rating.feedBack.userName}"
            android:id="@+id/ratingUser"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            style="@style/HomePrice"
            app:layout_constraintTop_toBottomOf="@id/ratingLayout"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{rating.feedBack.content}"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:maxLines="3"
            android:lines="3"
            android:ellipsize="end"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/ratingUser"
            android:id="@+id/ratingContent"
            style="@style/HomeTitle"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/locationTV"
            style="@style/Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            dateFormat="@{rating.feedBack.createdDate}"
            android:textColor="@color/gray6"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/ratingUser"
            app:layout_constraintTop_toTopOf="@id/ratingUser"
            app:layout_constraintBottom_toBottomOf="@id/ratingUser"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
<!--</LinearLayout>-->
</layout>
