<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tempImg"
            android:visibility="invisible"/>

        <com.shuhart.stepview.StepView
            android:id="@+id/stepView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:sv_stepsNumber="5"
            app:sv_animationType="All"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            app:sv_nextStepCircleEnabled="true"
            app:sv_nextStepCircleColor="@color/gray"
            app:sv_nextStepLineColor="@color/gray"
            app:sv_nextTextColor="@color/black"
            app:sv_stepLineWidth="3dp"
            app:sv_stepPadding="0dp"
            app:sv_selectedCircleRadius="20dp"
            app:sv_doneCircleRadius="20dp"
            app:sv_stepNumberTextSize="16sp"
            app:sv_selectedCircleColor="@color/primary"
            app:sv_selectedStepNumberColor="@color/white"
            app:sv_doneCircleColor="@color/primary"
            app:sv_doneStepMarkColor="@color/white"
            app:sv_doneStepLineColor="@color/primary"
            />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/addHomeViewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/stepView"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nextSlideBtn"
            android:layout_margin="16dp"
            app:fabSize="mini"
            android:src="@drawable/ic_right_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="ContentDescription" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prevSlideBtn"
            android:layout_margin="16dp"
            app:fabSize="mini"
            app:tint="@color/black"
            app:rippleColor="@android:color/darker_gray"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_left_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>