<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.shuhart.stepview.StepView
            android:id="@+id/stepView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:sv_stepsNumber="4"
            app:sv_animationType="All"
            android:paddingTop="32dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            app:sv_nextStepCircleEnabled="true"
            app:sv_nextStepCircleColor="@color/gray"
            app:sv_nextStepLineColor="@color/gray"
            app:sv_nextTextColor="@color/black"
            app:sv_stepLineWidth="3dp"
            app:sv_stepPadding="0dp"
            app:sv_selectedCircleRadius="20dp"
            app:sv_doneCircleRadius="20dp"
            app:sv_stepNumberTextSize="16sp"
            app:sv_selectedCircleColor="@color/primary"
            app:sv_selectedStepNumberColor="@color/white"
            app:sv_doneCircleColor="@color/primary"
            app:sv_doneStepMarkColor="@color/white"
            app:sv_doneStepLineColor="@color/primary"
            />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/addHomeViewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/stepView"
            app:layout_constraintBottom_toTopOf="@id/constraintLayout"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/constraintLayout">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:text="Trước"
                android:background="@drawable/button_reverse_bg"
                android:textColor="@color/gray"
                android:id="@+id/btnPreviousSlide"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:text="Tới"
                style="@style/ButtonPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/guideline2"
                android:id="@+id/btnNextSlide"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp" />

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline2"
                app:layout_constraintGuide_percent="0.5"
                android:orientation="vertical" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>